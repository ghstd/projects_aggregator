<main class="password_edit">
  <h2 class="password_edit__title">Change your password</h2>

  <%= form_with(model: resource, url: password_path(resource_name), html: { method: :put }, class: "password_edit__form devise_form") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="devise_form__field">
      <%= f.label :password, "New password" %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "Password: #{@minimum_password_length} characters minimum" %>
    </div>

    <div class="devise_form__field">
      <%= f.label :password_confirmation, "Confirm new password" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <%= f.submit "Change my password", class: "devise_form__button button_small" %>
  <% end %>

  <div class="password_edit__links">
    <%= render "devise/shared/links" %>
  </div>
</main>
