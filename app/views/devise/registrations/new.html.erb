<main class="sign_in_up">
  <%= link_to t("buttons.back"), root_path, class: "button sign_in_up__button" %>

  <h1 class="sign_in_up__title"><%= t(".title") %></h1>

  <div class="sign_in_up__body">
    <%= form_with model: resource, url: registration_path(resource_name), class: "sign_in_up__form devise_form" do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="devise_form__field">
        <%= f.label :email, t(".email") %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t(".email") %>
      </div>

      <div class="devise_form__field">
        <%= f.label :name, t(".name") %>
        <%= f.text_field :name, autofocus: true, placeholder: t(".name") %>
      </div>

      <div class="devise_form__field">
        <%= f.label :password, t(".password") %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: t(".password_length", min_length: @minimum_password_length) %>
      </div>

      <div class="devise_form__field">
        <%= f.label :password_confirmation, t(".password_confirmation") %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: t(".password_confirmation") %>
      </div>

      <%= f.submit t("buttons.sign_up"), class: "devise_form__button button" %>

    <% end %>

    <h2 class="sign_in_up__text"><%= t(".text") %></h2>

    <div class="sign_in_up__oauth_links">
      <%= render "devise/shared/omniauth_links" %>
    </div>

    <div class="sign_in_up__devise_links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</main>
