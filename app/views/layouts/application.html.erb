<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :current_page_tab_title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body data-theme="<%= get_theme_from_cookie %>">
    <div class="container">
      <%= yield %>
      <div id="flash_container"><%= render "partials/flash_messages" %></div>
      <%= render "partials/cookie_banner" if !cookies[:cookies_accepted] %>
      <div class="spinner" data-controller="spinner"></div>
    </div>
  </body>
</html>
