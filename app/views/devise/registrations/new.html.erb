<main class="sign_in_up">
  <%= link_to t("buttons.back"), root_path, class: "button sign_in_up__button" %>

  <h1 class="sign_in_up__title">Sign Up</h1>

  <div class="sign_in_up__body">
    <%= form_with model: resource, url: registration_path(resource_name), class: "sign_in_up__form devise_form" do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="devise_form__field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
      </div>

      <div class="devise_form__field">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, placeholder: "Name" %>
      </div>

      <div class="devise_form__field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password: #{@minimum_password_length} characters minimum" %>
      </div>

      <div class="devise_form__field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password" %>
      </div>

      <%= f.submit t("buttons.sign_up"), class: "devise_form__button button" %>

    <% end %>

    <h2 class="sign_in_up__text">Or you can use:</h2>

    <div class="sign_in_up__oauth_links">
      <%= render "devise/shared/omniauth_links" %>
    </div>

    <div class="sign_in_up__devise_links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</main>
