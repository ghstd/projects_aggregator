<% if object&.errors&.full_messages&.any? %>
  <div class="form_errors" data-controller="notificationsErrors">
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <button type="button" data-action="notificationsErrors#close">&times;</button>
  </div>
<% end %>