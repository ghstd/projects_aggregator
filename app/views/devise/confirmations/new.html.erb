<main class="confirmation_new">
  <h2 class="confirmation_new__title">Resend confirmation instructions</h2>

  <%= form_for(model: resource, url: confirmation_path(resource_name), html: { method: :post }, class: "confirmation_new__form devise_form") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="devise_form__field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
    </div>

    <%= f.submit "Resend confirmation instructions", class: "devise_form__button button_small" %>
  <% end %>

  <div class="confirmation_new__links">
    <%= render "devise/shared/links" %>
  </div>
</main>
