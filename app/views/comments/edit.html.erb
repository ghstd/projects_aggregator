<main class="comment_edit">
  <%= link_to t("buttons.back"), comments_path, class: "button comment_edit__button" %>
  <h1 class="comment_edit__title">Edit comment</h1>
  <%= turbo_frame_tag @comment do %>
    <div class="comment_edit__body">
      <% if request.headers["Turbo-Frame"].present? %>
        <%= link_to t("buttons.close"), comments_path, class: "button_small comments__close_button" %>
      <% end %>
      <%= render "form", comment: @comment %>
    </div>
  <% end %>
</main>