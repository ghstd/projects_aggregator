<%- if controller_name != 'sessions' %>
  <%= link_to t("buttons.log_in_page"), new_session_path(resource_name), class: "button_small" %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t("buttons.sign_up_page"), new_registration_path(resource_name), class: "button_small" %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t("buttons.forgot_your_password"), new_password_path(resource_name), class: "button_small" %>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t("buttons.not_receive_confirmation"), new_confirmation_path(resource_name), class: "button_small" %>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t("buttons.not_receive_unlock"), new_unlock_path(resource_name), class: "button_small" %>
<% end %>
