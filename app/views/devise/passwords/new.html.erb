<main class="password_new">
  <h2 class="password_new__title">Forgot your password?</h2>

  <%= form_with(model: resource, url: password_path(resource_name), html: { method: :post }, class: "password_new__form devise_form") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="devise_form__field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <%= f.submit "Send reset instructions", class: "devise_form__button button_small" %>
  <% end %>

  <div class="password_new__links">
    <%= render "devise/shared/links" %>
  </div>
</main>